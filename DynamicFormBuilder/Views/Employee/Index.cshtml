@section Scripts {
    <script>
        function loadEmployeeHistory(employeeId) {

            // Show modal
            var modal = new bootstrap.Modal(document.getElementById('historyModal'));
            modal.show();

            // Show spinner
            $('#historyModalBody').html(`
                <div class="text-center py-5">
                    <div class="spinner-border" role="status"></div>
                    <div class="mt-2">Loading...</div>
                </div>
            `);

            // AJAX call
            $.ajax({
                url: '@Url.Action("Details", "Employee")',
                type: 'GET',
                data: { employeeId: employeeId },

                success: function (result) {
                    setTimeout(() => {
                        $('#historyModalBody').html(result);
                    }, 800);
                }, // ✅ REQUIRED comma

                error: function (xhr, status, error) {
                    $('#historyModalBody').html(`
                        <div class="alert alert-danger">
                            <h4>Error</h4>
                            <p>Failed to load employee history. Please try again.</p>
                            <small>${error}</small>
                        </div>
                    `);
                }
            });
        }
        function openEditModal(id) {
            // Show modal
            var modal = new bootstrap.Modal(document.getElementById('editEmployeeModal'));
            modal.show();

            // Show spinner
            $('#editModalBody').html(`
                <div class="text-center py-5">
                    <div class="spinner-border" role="status"></div>
                    <div class="mt-2">Loading...</div>
                </div>
            `);

            // AJAX call
            $.ajax({
                url: '@Url.Action("Edit", "Employee")/' + id,
                type: 'GET',
                headers: { 'X-Requested-With': 'XMLHttpRequest' },
                success: function (result) {
                    setTimeout(() => {
                        $('#editModalBody').html(result);
                    }, 500);
                },
                error: function (xhr, status, error) {
                    $('#editModalBody').html(`
                        <div class="alert alert-danger">
                            <h4>Error</h4>
                            <p>Failed to load employee data. Please try again.</p>
                            <small>${error}</small>
                        </div>
                    `);
                }
            });
        }
        function openDeleteModal(id) {
            // Show modal
            var modal = new bootstrap.Modal(document.getElementById('deleteEmployeeModal'));
            modal.show();

            // Show spinner
            $('#deleteModalBody').html(`
                <div class="text-center py-5">
                    <div class="spinner-border" role="status"></div>
                    <div class="mt-2">Loading...</div>
                </div>
            `);

            // AJAX call
            $.ajax({
                url: '@Url.Action("Delete", "Employee")/' + id,
                type: 'GET',
                headers: { 'X-Requested-With': 'XMLHttpRequest' },
                success: function (result) {
                    setTimeout(() => {
                        $('#deleteModalBody').html(result);
                    }, 500);
                },
                error: function (xhr, status, error) {
                    $('#deleteModalBody').html(`
                        <div class="alert alert-danger">
                            <h4>Error</h4>
                            <p>Failed to load employee data. Please try again.</p>
                            <small>${error}</small>
                        </div>
                    `);
                }
            });
        }
    </script>

}
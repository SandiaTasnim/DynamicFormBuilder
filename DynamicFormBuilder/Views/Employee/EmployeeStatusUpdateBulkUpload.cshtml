@model dynamic
@{
    Layout = "_Layout";  // or your site layout
    ViewBag.Title = "Employee Bulk Upload";
}

<h2>Employee Status Bulk Upload</h2>

<div class="card p-3 mb-3">
    <form asp-action="EmployeeStatusUpdateBulkUpload" asp-controller="Employee" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="fileUpload">Select CSV or Excel file</label>
            <input type="file" name="fileUpload" id="fileUpload" class="form-control" accept=".csv,.xls,.xlsx" required />
        </div>

        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>
    </form>
</div>

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        @TempData["success"]
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger">
        @TempData["error"]
    </div>
}

<div id="uploadResult"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Optional: AJAX submit instead of full page reload
            $('form').submit(function (e) {
                e.preventDefault();

                var formData = new FormData(this);

                $.ajax({
                    url: '@Url.Action("EmployeeStatusUpdateBulkUpload", "Employee")',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        $('#uploadResult').html('<div class="alert alert-info">' + response.message + '</div>');

                        if (response.redirectTo) {
                            setTimeout(function () {
                                window.location.href = response.redirectTo;
                            }, 1500);
                        }
                    },
                    error: function (xhr, status, error) {
                        $('#uploadResult').html('<div class="alert alert-danger">Error uploading file: ' + error + '</div>');
                    }
                });
            });
        });
    </script>
}

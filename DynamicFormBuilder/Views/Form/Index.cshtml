@{
    ViewData["Title"] = "Forms List";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Dynamic Forms</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Create", "Form")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Form
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table id="formsTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Form ID</th>
                        <th>Form Title</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
            function deleteForm(formId) {

            if (!confirm("Are you sure you want to delete this form?")) {
                return;
            }

            $.ajax({
                url: '/Form/Delete/' + formId,
                type: 'POST',
                success: function (response) {
                    alert("Form deleted successfully!");
                    $('#formsTable').DataTable().ajax.reload();
                },
                error: function (xhr, status, error) {
                    console.error("Delete Error:", error);
                    alert("Failed to delete. Please try again.");
                }
            });
        }
        $(document).ready(function () {
            $('#formsTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetForms", "Form")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: function (d) {
                        return JSON.stringify(d);
                    },
                    error: function (xhr, error, thrown) {
                        console.error('DataTable Error:', error);
                        alert('Error loading data. Please refresh the page.');
                    }
                },
                columns: [
                    { data: 'formId', width: '10%' },
                    { data: 'formTitle', width: '50%' },
                    {
                        data: 'createdDate',
                        width: '20%',
                        render: function (data) {
                            return new Date(data).toLocaleDateString('en-US');
                        }
                    },
                    {
                        data: null,
                        width: '20%',
                        orderable: false,
                        render: function (data, type, row) {
                            return `
                                <a href="/Form/Preview/${row.formId}" class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-eye"></i> Preview
                                </a>
                                <a href="/Form/Edit/${row.formId}" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <button class="btn btn-sm btn-danger" onclick="deleteForm(${row.formId})">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
        
                            `;
                        }
                    }
                ],
                order: [[0, 'desc']],
                pageLength: 10,
                language: {
                    emptyTable: "No forms created yet. Click 'Create New Form' to get started."
                }
            });
        });
    </script>
}

@model IEnumerable<DynamicFormBuilder.Models.StudentModel>

@{
    ViewData["Title"] = "Students List";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Students</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Create", "Student")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Student
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered" id="studentsTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.StudentName</td>
                            <td>@student.Age</td>
                            <td>@student.PhoneNumber</td>
                            <td>@student.Email</td>
                            <td>@student.Department</td>
                            <td>
                                <a href="@Url.Action("Details", "Student", new { id = student.StudentId })" class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a href="@Url.Action("Edit", "Student", new { id = student.StudentId })" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#studentsTable').DataTable(); // Initialize DataTables if you want search/paging
        });
    </script>
}

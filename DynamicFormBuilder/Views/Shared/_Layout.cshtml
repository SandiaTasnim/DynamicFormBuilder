@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dynamic Form Builder</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    @* Success Toast Notification *@
    @if (TempData["success"] != null)
    {
        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
            <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        @TempData["success"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>
    }

    @if (SignInManager.IsSignedIn(User))
    {
        @* Dashboard Layout for Authenticated Users *@
        <div class="d-flex" id="wrapper">

            @* Sidebar *@
            <div class="bg-dark text-white position-fixed" id="sidebar-wrapper" style="height: 100vh; overflow-y: auto;">
                <div class="sidebar-heading px-3 py-4 border-bottom">
                    <i class="bi bi-file-earmark-text me-2"></i>
                    <span>Dynamic Form Builder</span>
                </div>

                <nav class="list-group list-group-flush">
                    <a asp-controller="Form" asp-action="Index"
                       class="list-group-item list-group-item-action bg-dark text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Form" ? "active" : "")">
                        <i class="bi bi-list-ul me-2"></i>
                        <span>Forms List</span>
                    </a>

                    <a asp-controller="Customer" asp-action="Index"
                       class="list-group-item list-group-item-action bg-dark text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customer" ? "active" : "")">
                        <i class="bi bi-person-badge me-2"></i>
                        <span>Customer List</span>
                    </a>

                    <a asp-controller="Employee" asp-action="Index"
                       class="list-group-item list-group-item-action bg-dark text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Employee" ? "active" : "")">
                        <i class="bi bi-person-lines-fill me-2"></i>
                        <span>Employee List</span>
                    </a>
                </nav>
            </div>

            @* Page Content Wrapper *@
            <div id="page-content-wrapper" style="margin-left: 215px; width: calc(100% - 260px);">

                @* Top Navbar *@
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom p-0">
                    <div class="container-fluid py-2 pt-xl-4">
                        @* <button class="btn btn-outline-light me-3" id="menu-toggle" title="Toggle Sidebar">
                            <i class="bi bi-list"></i>
                        </button> *@
                        <span class="navbar-brand mb-0 h1">Dashboard</span>

                        @* User Menu *@
                        <div class="ms-auto">
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle text-white d-flex align-items-center"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <i class="bi bi-person-circle me-2"></i>
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    <li>
                                        <form asp-action="Logout" asp-controller="Account" method="post" class="m-0">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

                @* Main Content *@
                <main class="container-fluid p-4" style="min-height: calc(100vh - 140px);">
                    @RenderBody()
                </main>

                @* Footer *@
                <footer class="border-top bg-white text-muted py-3">
                    <div class="container-fluid text-center">
                        <p class="mb-0">
                            &copy; @DateTime.Now.Year - Dynamic Form Builder |
                            <a asp-controller="Form" asp-action="Index" class="text-decoration-none">Home</a>
                        </p>
                    </div>
                </footer>
            </div>
        </div>
    }
    else
    {
        @* Layout for Non-Authenticated Users *@

        @* Top Navigation *@
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-file-earmark-text me-2 text-primary"></i>
                    <span class="fw-bold">Dynamic Form Builder</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary ms-2 px-4" asp-action="Login" asp-controller="Account">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary text-white ms-2 px-4" asp-action="Register" asp-controller="Account">
                                <i class="bi bi-person-plus me-1"></i>Register
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        @* Content Container *@
        <div class="auth-container">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="auth-card">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* Footer *@
        <footer class="auth-footer border-top bg-white text-muted py-4">
            <div class="container text-center">
                <p class="mb-0">
                    &copy; @DateTime.Now.Year - Dynamic Form Builder |
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Home</a>
                </p>
            </div>
        </footer>
    }

    @* Scripts *@
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Sidebar Toggle Script *@
    <script>
        $(document).ready(function() {
            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#sidebar-wrapper").toggleClass("collapsed");
                $("#page-content-wrapper").toggleClass("expanded");
            });
        });
    </script>

    @* Toast Notification Script *@
    @if (TempData["success"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const toastEl = document.getElementById('successToast');
                if (toastEl) {
                    const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                    toast.show();
                }
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>